<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @client.email %>
</p>

<p>
  <strong>Address:</strong>
  <%= @client.address %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @client.zip_code %>
</p>

<p>
  <strong>Password:</strong>
  <%= @client.password %>
</p>

<p>
  <strong>Ssid:</strong>
  <%= @client.ssid %>
</p>

<p>
  <strong>Birth date:</strong>
  <%= @client.birth_date %>
</p>

<p>
  <% if @client.balance < 0 %>
    <strong>Saldo:</strong>
    <font color="red"><%= @client.balance.round(2) %></font>
  <% else %>
    <strong>Saldo:</strong>
    <font color="green"><%= @client.balance.round(2) %></font>
  <% end %>
</p>

<p>
  <strong>Cards:</strong>
  <%= @client.cards.count %>
  <p>
  <% @client.cards.each do |card| %>
    <li>
      <a href="/cards/<%= card.id %>">
        <%= card.card_number %>
      </a>
      <% if card.balance < 0 %>
        <strong>Saldo:</strong>
        <font color="red"><%= card.balance.round(2) %></font>
      <% else %>
        <strong>Saldo:</strong>
        <font color="green"><%= card.balance.round(2) %></font>
      <% end %>
    </li>
  <% end %>
  </p>
</p>

<p>
  <%= link_to 'Edit', edit_client_path(@client) %> |
  <%= link_to 'Back', clients_path %>
</p>

<p>
  <a href="<%= @client.id - 1 if @client.id > Client.first.id %>"> Prev </a> |
  <a href="<%= @client.id + 1 if @client.id < Client.last.id %>"> Next </a>
</p>
